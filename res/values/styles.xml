<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarSize">40dp</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
    </style>        
    
    
    <style name="Theme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>
    
    <style name="Theme.ActionBar.Solid" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_solid_bg</item>
    </style>
    
</resources>