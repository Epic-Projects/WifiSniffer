<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.blueodin.wifisniffer.MainActivity">

    <fragment
        android:id="@+id/network_list"
        android:name="com.blueodin.wifisniffer.fragments.WifiListFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.blueodin.wifisniffer.fragments.WifiListFragment"
        tools:layout="@layout/wifiscanresult_list_row"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>